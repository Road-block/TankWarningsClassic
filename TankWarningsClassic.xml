			</Scripts>
		</CheckButton>
		<CheckButton name="$parentShowExpirationsButton" inherits="OptionsCheckButtonTemplate">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent">
				<Offset><AbsDimension x="20" y="-80"/></Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnLoad> 
					_G[self:GetName().."Text"]:SetText("|cffffffffShow expirations?");
					self._option = "showExpirations";
				</OnLoad>
				<OnClick function="TankWarningsClassic_OnConfigCheckButtonClicked"/>
			</Scripts>
		</CheckButton>
		<Button name="$parentRaidDropDown" inherits="UIDropDownMenuTemplate">
		   	<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent">
				<Offset><AbsDimension x="20" y="-135"/></Offset>
				</Anchor>
			</Anchors>
		   <Scripts>
        <OnLoad>
            UIDropDownMenu_Initialize(self, TankWarningsClassic_LoadRaidOptions);
            self._option = "raidOption";
        </OnLoad>
		   </Scripts>
	   </Button>
		<Button name="$parentWarningFallbackDropDown" inherits="UIDropDownMenuTemplate">
		   	<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent">
				<Offset><AbsDimension x="20" y="-195"/></Offset>
				</Anchor>
			</Anchors>
		   <Scripts>
	        <OnLoad>
	            UIDropDownMenu_Initialize(self, TankWarningsClassic_LoadWarningFallbacks);
